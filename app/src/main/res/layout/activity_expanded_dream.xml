<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_expanded_dream"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_night_blur"
    tools:context="com.phrenologue.dreamcatcherapp.activities.ExpandedDreamActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000"
        android:backgroundTint="#77000000"
        android:elevation="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:backgroundTint="@color/white" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card_view"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/rel_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <com.phrenologue.dreamcatcherapp.ui.costumeFont.MoonTextView
                android:id="@+id/dreams_package_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="TEST"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <com.phrenologue.dreamcatcherapp.ui.costumeFont.MoonTextView
                android:id="@+id/title_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dreams_package_title"
                android:layout_centerHorizontal="true"
                android:text="date"
                android:textColor="@color/white"
                android:textSize="@dimen/hint_size" />

            <RelativeLayout
                android:id="@+id/rel_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_simple_rounded"
                android:backgroundTint="#80000000"
                android:gravity="center_horizontal">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mood"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    app:srcCompat="@drawable/ic_smile_emoji"
                    app:tint="@color/txt_glow" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/day_time"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/mood"
                    app:srcCompat="@drawable/ic_day_symbol"
                    app:tint="@color/day_light" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/color"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/day_time"
                    app:srcCompat="@drawable/button_colorful_on" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/sound"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/color"
                    app:srcCompat="@drawable/button_musical_on" />


            </RelativeLayout>

            <com.phrenologue.dreamcatcherapp.ui.costumeFont.MoonTextView
                android:id="@+id/dreams_package_description"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_info"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_simple_rounded"
                android:backgroundTint="#80000000"
                android:padding="16dp"
                android:text="@string/dreams_package_description_input"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />

            <com.phrenologue.dreamcatcherapp.ui.costumeFont.MoonTextView
                android:id="@+id/dreams_package_interpretation"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dreams_package_description"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_simple_rounded"
                android:backgroundTint="#80000000"
                android:padding="16dp"
                android:text="@string/dreams_package_description_input"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_edt_dream"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_simple_rounded"
            android:backgroundTint="@color/txt_glow"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:padding="10dp"
            android:textColor="@color/white"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            app:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginBottom="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_simple"
            android:backgroundTint="@color/red"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            app:tint="@color/white" />

    </LinearLayout>

</RelativeLayout>
