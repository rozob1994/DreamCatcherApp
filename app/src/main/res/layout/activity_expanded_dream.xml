<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_expanded_dream"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_night_blur"
    tools:context="com.phrenologue.dreamcatcherapp.Activities.ExpandedDreamActivity">


    <io.alterac.blurkit.BlurLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ScrollView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/bg_shape_stroked">

                <com.phrenologue.dreamcatcherapp.Ui.costumeFont.MoonTextView
                    android:id="@+id/dreams_package_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="TEST"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <com.phrenologue.dreamcatcherapp.Ui.costumeFont.MoonTextView
                    android:id="@+id/title_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dreams_package_title"
                    android:layout_centerHorizontal="true"
                    android:text="date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/hint_size" />

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_shape"
                    android:backgroundTint="@color/black"
                    android:gravity="center_horizontal"
                    android:id="@+id/rel_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_date"
                    android:layout_centerHorizontal="true">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_margin="8dp"
                        android:id="@+id/mood"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_smile_emoji"
                        app:tint="@color/txt_glow" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_margin="8dp"
                        app:tint="@color/day_light"
                        app:srcCompat="@drawable/ic_day_symbol"
                        android:id="@+id/day_time"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toRightOf="@id/mood" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/button_colorful_on"
                        android:id="@+id/color"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toRightOf="@id/day_time" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_margin="8dp"
                        app:srcCompat="@drawable/button_musical_on"
                        android:id="@+id/sound"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_toRightOf="@id/color" />


                </RelativeLayout>

                <com.phrenologue.dreamcatcherapp.Ui.costumeFont.MoonTextView
                    android:id="@+id/dreams_package_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rel_info"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_shape"
                    android:backgroundTint="@color/black"
                    android:text="@string/dreams_package_description_input"
                    android:textColor="@color/white"
                    android:textSize="@dimen/edt_txt_size" />

                <LinearLayout
                    android:layout_marginTop="60dp"
                    android:layout_below="@+id/dreams_package_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="4dp"
                        android:id="@+id/btn_to_dream_input"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_gradient"
                        android:text="Edit Dream"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10dp"
                        app:tint="@color/white"
                        app:srcCompat="@drawable/ic_delete_black_24dp"
                        android:elevation="4dp"
                        android:id="@+id/btn_didnt_have_a_dream"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_gradient"
                        android:backgroundTint="#FF2525"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>


    </io.alterac.blurkit.BlurLayout>


</RelativeLayout>
