<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="16dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/bg_shape"
    android:backgroundTint="@color/black"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragments.SleepDreamInput.Fragments.questionnaire.QuestionNineteenFragment">


    <com.phrenologue.dreamcatcherapp.ui.costumeFont.MoonTextView
        android:id="@+id/question_nineteen_title"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textColor="@color/txt_glow"
        android:text="@string/question_19_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.phrenologue.dreamcatcherapp.ui.costumeFont.MoonTextView
        android:id="@+id/question_nineteen"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        android:layout_marginTop="16dp"
        android:text="@string/q19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_yes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:buttonTint="@color/white"
            android:checked="false"
            android:text="@string/yes_checkbox"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_notSure_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:buttonTint="@color/white"
            android:checked="false"
            android:text="@string/not_sure_checkbox"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_no_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:buttonTint="@color/white"
            android:checked="false"
            android:text="@string/no_checkbox"
            android:textColor="@color/white" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_prev"
        android:layout_width="125dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_gradient"
        android:elevation="4dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/previous_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/edt_txt_size"
        android:paddingStart="24dp"
        android:paddingEnd="24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="visible"
        android:id="@+id/btn_results"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_simple_rounded"
        android:backgroundTint="@color/txt_glow"
        android:elevation="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/submit_btn"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp" />

    <RelativeLayout
        android:id="@+id/loadingBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>