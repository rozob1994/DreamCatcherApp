<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_night"
    tools:context="com.phrenologue.dreamcatcherapp.Activities.StatsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartTwo"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartThree"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartFour"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartFive"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartSix"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>
