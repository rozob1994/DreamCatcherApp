<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_main"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-141dp"
        app:srcCompat="@drawable/dream_catcher_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rel_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profile_img"
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/avatar" />

                <com.example.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="USER1994"
                    android:textColor="@color/txt_glow"
                    android:textSize="@dimen/edt_title_size" />

                <com.example.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Level 1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/edt_title_size" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/profile_tabs_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dreams"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/button"
                    android:text="dreams"
                    android:textColor="@color/txt_glow"
                    android:textSize="@dimen/edt_title_size" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/stats"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/dreams"
                    android:background="@drawable/button"
                    android:text="stats"
                    android:textColor="@color/txt_glow"
                    android:textSize="@dimen/edt_title_size" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/frame_dreams_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_tabs_buttons"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>