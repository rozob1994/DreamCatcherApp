<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".Activities.Login.signUpActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_main"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="-200dp"
        app:srcCompat="@drawable/dream_catcher_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_entries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="Create an Account"
                    android:textColor="@color/white"
                    android:textSize="@dimen/header_title_size" />

                <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/username_edt_txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_title"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"
                    android:shadowColor="@color/txt_glow"
                    android:text="Username"
                    android:textColor="@color/txt_glow"
                    android:textSize="@dimen/edt_title_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/username_edt_txt_title"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/password"
                    android:hint="please enter your desired username"
                    android:paddingLeft="30dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edt_text_color"
                    android:textSize="@dimen/edt_txt_size" />

                <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/email_edt_txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_txt_username"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:shadowColor="@color/txt_glow"
                    android:text="Email"
                    android:textColor="@color/txt_glow"
                    android:textSize="@dimen/edt_title_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/email_edt_txt_title"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/password"
                    android:hint="please enter your email"
                    android:paddingLeft="30dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edt_text_color"
                    android:textSize="@dimen/edt_txt_size" />

                <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/password_edt_txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_txt_email"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:shadowColor="@color/txt_glow"
                    android:text="Password"
                    android:textColor="@color/txt_glow"
                    android:textSize="@dimen/edt_title_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/password_edt_txt_title"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/password"
                    android:hint="please enter your desired password"
                    android:paddingLeft="30dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/edt_text_color"
                    android:textSize="@dimen/edt_txt_size" />

                <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/password_req_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_txt_password"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="70dp"
                    android:text="-Your password must be between 8 to 30 characters."
                    android:textColor="@color/edt_text_color"
                    android:textSize="@dimen/edt_txt_size" />

                <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/password_req_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_req_1"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="60dp"
                    android:text="- Your password must contain at least one uppercase, or capital, letter (ex: A, B, etc.) "
                    android:textColor="@color/edt_text_color"
                    android:textSize="@dimen/edt_txt_size" />

                <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/password_req_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_req_2"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="60dp"
                    android:text="- Your password must contain at least one lowercase letter."
                    android:textColor="@color/edt_text_color"
                    android:textSize="@dimen/edt_txt_size" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_req_3"
                android:layout_marginTop="30dp">

                <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/date_of_birth_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:shadowColor="@color/txt_glow"
                    android:text="Date of Birth"
                    android:textColor="@color/txt_glow"
                    android:textSize="@dimen/edt_title_size" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_year"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignTop="@id/date_of_birth_title"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="60dp"
                    android:layout_toRightOf="@+id/date_of_birth_title"
                    android:background="@drawable/button"
                    android:entries="@array/year"
                    android:textAlignment="center" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_birth"
                android:layout_marginTop="30dp">

                <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                    android:id="@+id/gender_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"
                    android:shadowColor="@color/txt_glow"
                    android:text="Gender"
                    android:textColor="@color/txt_glow"
                    android:textSize="@dimen/edt_title_size" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="51dp"
                    android:layout_marginRight="60dp"
                    android:layout_toRightOf="@id/gender_title"
                    android:background="@drawable/button"
                    android:entries="@array/gender"
                    android:textAlignment="center" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_gender"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_login_accept"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_accept" />

                    <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/btn_login_accept"
                        android:textColor="@color/white"
                        android:text="Accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="40dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_login_decline"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_decline" />

                    <com.phrenologue.dreamcatcherapp.Ui.CostumeFont.MoonTextView
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/btn_login_decline"
                        android:textColor="@color/white"
                        android:text="Decline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>







            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>