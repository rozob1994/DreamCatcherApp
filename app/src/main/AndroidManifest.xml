<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.catchydreams.dreamcatcher">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.catchydreams.dreamcatcher.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name="com.catchydreams.dreamcatcher.activities.SelectLanguageActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.DreamChoosingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.LucidDreamingQuestionnaireActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.EditDreamInputActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.ExpandedDreamActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.LevelsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.StatsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.DreamsPackagesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.Splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:noHistory="true" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.catchydreams.dreamcatcher.activities.Login.SignUp"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.SleepDreamInputActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.ProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.catchydreams.dreamcatcher.activities.Login.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>